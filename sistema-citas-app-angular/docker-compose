version: '3.9'
services:
  db:
    image: postgres
    environment:
      POSTGRES_USER: admin
      POSTGRES_PASSWORD: admin
      POSTGRES_DB: citasdb
    volumes:
      - ./database/init.sql:/docker-entrypoint-initdb.d/init.sql
    ports:
      - "5432:5432"

  auth:
    build: ./backend/auth-microservice
    ports:
      - "8001:8000"
    depends_on:
      - db

  persistence:
    build: ./backend/persistence-microservice
    ports:
      - "8002:8000"
    depends_on:
      - db

  frontend:
    build: ./frontend-angular
    ports:
      - "4200:80"
    depends_on:
      - auth
      - persistence
